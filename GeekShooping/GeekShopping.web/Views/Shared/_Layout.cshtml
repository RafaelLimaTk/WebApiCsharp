<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GeekShopping.web</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GeekShopping.web.styles.css" asp-append-version="true" />
</head>
<body>
        <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow py-3 mb-4">
                    <div class="container">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none">
                                <i class="fa-solid fa-shop-lock fa-xl bi me-2" style="color: #000000;"></i>
                                <span class="fs-4">GeekShopping</span>
                            </a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div>
                                <ul class="navbar-collapse collapse nav nav-pills col-12 col-md-auto mb-md-0">
                                    <li class="nav-item"><a id="homeLink" asp-controller="Home" asp-action="Index" class="nav-link" aria-current="page">Home</a></li>
                                    <li class="nav-item"><a id="productLink" asp-controller="Product" asp-action="ProductIndex" class="nav-link">Product</a></li>
                                    <li class="nav-item"><a asp-controller="" asp-action="" class="nav-link">Pricing</a></li>
                                    <li class="nav-item"><a asp-controller="" asp-action="" class="nav-link">FAQs</a></li>
                                    <li class="nav-item"><a asp-controller="" asp-action="" class="nav-link">About</a></li>
                                </ul>
                            </div>

                            <div class="d-flex justify-content-center align-items-center">
                                <a asp-controller="" class="navbar-collapse collapse col-md-auto btn btn-outline-secondary me-2">Login</a>
                                <a asp-controller="" class="navbar-collapse collapse col-md-auto btn btn-primary btn-style">Sign-up</a>
                            </div>
                        </div>
                </nav>
        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GeekShopping.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/5898923c84.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
