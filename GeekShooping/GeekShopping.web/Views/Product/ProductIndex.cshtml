@model IEnumerable<GeekShopping.web.Models.ProductModel>

<div class="container mb-4">
    <div class="bg-secondary p-4 rounded row d-flex align-items-center">
        <div class="col">
            <h1 class="text-white">Products List</h1>
            <span class="text-white text-opacity-75">© 2023</span>
        </div>
        <div class="col text-end">
            <a asp-action="ProductCreate" class="btn btn-outline-light">
                <i class="fas fa-plus"></i> Create new product
            </a>
        </div>
    </div>
</div>

<div class="container p-1">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {                
            <tr>
                <td>@item.Id</td>
                <td class="col-7">@item.Name</td>
                <td class="col-2">@item.CategoryName</td>
                <td>@((item.Price).ToString("c"))</td>
                <td>
                    <a asp-action="ProductUpdate" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
