@model IEnumerable<GeekShopping.web.Models.ProductModel>

<div class="container p-4 border rounded-1 shadow-sm">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-dark">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create new product
            </a>
        </div>
    </div>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {                
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@((item.Price).ToString("c"))</td>
                <td>
                    <a asp-action="ProductUpdate" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can"></i>
                    </a>
                </td> 
            </tr>
            }
        </tbody>
    </table>
</div>
